        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        </head>

    <body>

    <div class="container">
        <div class="row">

            <div id="carouselPizza" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="image/pizza/pizza_slide_1.jpg" alt="Premier slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="image/pizza/pizza_slide_2.jpg" alt="Deuxieme slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="image/pizza/pizza_slide_3.jpg" alt="Troisieme slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselPizza" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </a>
                <a class="carousel-control-next" href="#carouselPizza" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </a>
              </div>

              <div id="pizzas">

              </div>

            <div class="row-md-2 d-flex justify-content-center text-center">
                
                <a class="btn btn-dark w-25 row" href="#" role="button">
                    <p class="fs-4"> Livraison</p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-truck" viewBox="0 0 16 16">
